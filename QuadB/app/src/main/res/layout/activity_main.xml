<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_menu" />

    <EditText
        android:id="@+id/et_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/ic_baseline_location_on_24"
        android:text="@string/location"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:alpha="0.5"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:drawableLeft="@drawable/ic_baseline_search_24"
        android:text="@string/search"
        app:layout_constraintStart_toStartOf="@+id/et_location"
        app:layout_constraintTop_toBottomOf="@+id/et_location" />

<!--    <ScrollView-->
<!--        android:id="@+id/scrollable"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:layout_constraintBottom_toBottomOf="@+id/et_search"-->
<!--        app:layout_constraintStart_toStartOf="parent">-->

        <TextView
            android:id="@+id/tv_pro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="@string/pro"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_search" />

        <Spinner
            android:id="@+id/s_cuisine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/tv_pro"
            app:layout_constraintTop_toTopOf="@+id/tv_pro" />


    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/rating"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/s_cuisine"
        app:layout_constraintStart_toEndOf="@+id/s_cuisine"
        app:layout_constraintTop_toTopOf="@+id/s_cuisine" />
    <TextView
        android:id="@+id/safety"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/max_safety"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toEndOf="@+id/rating"
        app:layout_constraintTop_toTopOf="@+id/rating" />

    <ImageView
        android:id="@+id/offer_paytm"
        android:layout_width="180dp"
        android:layout_height="190dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pro"
        tools:srcCompat="@drawable/offer_paytm" />

    <ImageView
        android:id="@+id/offer_paypal"
        android:layout_width="180dp"
        android:layout_height="190dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/offer_paytm"
        app:layout_constraintTop_toTopOf="@+id/offer_paytm"
        tools:srcCompat="@drawable/offer_paypal" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="@string/food_category"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offer_paytm" />

    <ImageView
        android:id="@+id/iv_pizza"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        tools:srcCompat="@drawable/pizza" />

    <ImageView
        android:id="@+id/iv_burger"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toEndOf="@+id/iv_pizza"
        app:layout_constraintTop_toTopOf="@+id/iv_pizza"
        tools:srcCompat="@drawable/burger" />

    <ImageView
        android:id="@+id/iv_healthy"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toEndOf="@+id/iv_burger"
        app:layout_constraintTop_toTopOf="@+id/iv_burger"
        tools:srcCompat="@drawable/healthy" />

    <ImageView
        android:id="@+id/iv_sandwich"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toEndOf="@+id/iv_healthy"
        app:layout_constraintTop_toTopOf="@+id/iv_healthy"
        tools:srcCompat="@drawable/sandwich" />

    <TextView
        android:id="@+id/tv_pizza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/pizza"
        app:layout_constraintEnd_toEndOf="@+id/iv_pizza"
        app:layout_constraintHorizontal_bias="0.388"
        app:layout_constraintStart_toStartOf="@+id/iv_pizza"
        app:layout_constraintTop_toBottomOf="@+id/iv_pizza" />

    <TextView
        android:id="@+id/tv_burger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/burger"
        app:layout_constraintEnd_toEndOf="@+id/iv_burger"
        app:layout_constraintHorizontal_bias="0.586"
        app:layout_constraintStart_toStartOf="@+id/iv_burger"
        app:layout_constraintTop_toTopOf="@+id/tv_pizza" />

    <TextView
        android:id="@+id/tv_healthy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/healthy"
        app:layout_constraintEnd_toEndOf="@+id/iv_healthy"
        app:layout_constraintStart_toStartOf="@+id/iv_healthy"
        app:layout_constraintTop_toTopOf="@+id/tv_burger" />

    <TextView
        android:id="@+id/tv_sandwich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sandwich"
        app:layout_constraintEnd_toEndOf="@+id/iv_sandwich"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/iv_sandwich"
        app:layout_constraintTop_toTopOf="@+id/tv_healthy" />

    <ImageView
        android:id="@+id/iv_cake"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_pizza"
        app:layout_constraintStart_toStartOf="@+id/iv_pizza"
        app:layout_constraintTop_toBottomOf="@+id/tv_pizza"
        tools:srcCompat="@drawable/cake" />

    <ImageView
        android:id="@+id/iv_chaat"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_burger"
        app:layout_constraintStart_toStartOf="@+id/iv_burger"
        app:layout_constraintTop_toTopOf="@+id/iv_cake"
        tools:srcCompat="@drawable/chaat" />

    <ImageView
        android:id="@+id/iv_chinese"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_healthy"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/iv_healthy"
        app:layout_constraintTop_toTopOf="@+id/iv_chaat"
        tools:srcCompat="@drawable/chinese" />

    <ImageView
        android:id="@+id/iv_fries"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_sandwich"
        app:layout_constraintStart_toStartOf="@+id/iv_sandwich"
        app:layout_constraintTop_toTopOf="@+id/iv_chinese"
        tools:srcCompat="@drawable/fries" />

    <TextView
        android:id="@+id/tv_cake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/cake"
        app:layout_constraintEnd_toEndOf="@+id/iv_cake"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="@+id/iv_cake"
        app:layout_constraintTop_toBottomOf="@+id/iv_cake" />

    <TextView
        android:id="@+id/tv_chaat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chaat"
        app:layout_constraintEnd_toEndOf="@+id/iv_chaat"
        app:layout_constraintStart_toStartOf="@+id/iv_chaat"
        app:layout_constraintTop_toTopOf="@+id/tv_cake" />

    <TextView
        android:id="@+id/tv_chinese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chinese"
        app:layout_constraintEnd_toEndOf="@+id/iv_chinese"
        app:layout_constraintStart_toStartOf="@+id/iv_chinese"
        app:layout_constraintTop_toTopOf="@+id/tv_chaat" />

    <TextView
        android:id="@+id/tv_fries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fries"
        app:layout_constraintEnd_toEndOf="@+id/iv_fries"
        app:layout_constraintStart_toStartOf="@+id/iv_fries"
        app:layout_constraintTop_toTopOf="@+id/tv_chinese" />




</androidx.constraintlayout.widget.ConstraintLayout>